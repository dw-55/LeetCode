public void sumOfLeaves(TreeNode root) {
        int x = 0;
        if (root.left == null && root.right == null)
            x += root.val;
        if (root.left == null) || root.right == null)
            return;
        if(root.left != null) {
            sumOfLeaves(root.left);
        }
        if(root.right != null) {
            sumOfLeaves(root.right)
        }
}
